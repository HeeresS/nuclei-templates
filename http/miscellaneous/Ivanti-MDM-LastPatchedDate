id: Ivanti-MDM-LastPatchedDate

info:
  name: Print Last Modified Date
  author: HeeresS
  severity: info
  description: |
    Extracts and prints the "Last Modified" date from the HTTP response header from de webserver running Ivanti MDM.

http:
  - raw:
      - |
        GET /mifs/css/pages/userlogin.css HTTP/1.1
        Host: {{Hostname}}

    extractors:
      - type: regex
        name: last_modified
        part: header
        group: 1
        regex:
          - 'Last-Modified: (.*)'
